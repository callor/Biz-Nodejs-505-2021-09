extends layout
block content
	
	script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js")
	link(rel="stylesheet",
		| href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
	script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js")
	link(href="/summernote-0.8.18-dist/summernote-bs4.min.css",
		| rel="stylesheet")
	script(src="/summernote-0.8.18-dist/summernote-bs4.min.js")
	script(src="/summernote-0.8.18-dist/lang/summernote-ko-KR.min.js")

	section
		form.bbs_write(method="POST")
			div
				label(for="") 작성자
				input#b_writer(name="b_writer",value= BBS.b_writer)
			
			div
				label(for="") 작성일자
				input#b_date(name="b_date",value= BBS.b_date)
			
			div
				label(for="") 작성시각
				input#b_time(name="b_time", value= BBS.b_time)
			
			div
				label(for="") 제목
				input#b_subject(name="b_subject",value=  BBS.b_subject)

			div.text_box
				label(for="") 내용
				textarea#b_text(name="b_text")= BBS.b_text

			div.btn_box
			button 저장

		script(src="/js/fileup.js")
		script(src="/js/write.js")

